  <div class="d-flex justify-content-center">
    {{!-- First page without pagenumber / --}}
    {{#if pagePrevious}}
      {{#if (eq pagePrevious 1)}} <a class="arrow" href="/">&#x2190;</a>
      {{else}}
        <a class="arrow" href="?page={{pagePrevious}}">&#x2190;</a>
      {{/if}}
    {{else}}
      <a class="arrow" style="pointer-events: none; cursor: default;" href="/">&#x2190;</a>
    {{/if}}
      <b>Page: </b> &nbsp;{{dec pageNext}}
      <a class="arrow" href="?page={{pageNext}}">&#8594;</a>
  </div>
